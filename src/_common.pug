block meta
-
    $meta=$meta || {};
    $meta.domain="http://hoge.com";
    if(!$meta.path)$meta.path="./";
    if(!$meta.dir)$meta.dir="";
    if(!$meta.title)$meta.title="";
    if(!$meta.description)$meta.description="";
    if(!$meta.keyword)$meta.keyword="";

doctype html
html(lang="ja")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width,user-scalable=no")

        title !{$meta.title}
        meta(name='description', content=$meta.description)
        meta(name='keywords', content=$meta.keyword)
        //- meta(name='author', content='')
        meta(property='og:title', content=$meta.title)
        meta(property='og:type', content='website')
        meta(property='og:url', content=$meta.domain + "/" + $meta.dir)
        meta(property='og:image', content=$meta.domain + "/ogp.jpg")
        meta(property='og:site_name', content = "")
        meta(property='og:description', content=$meta.description)

        //link(rel="apple-touch-icon" href="")
        link(type="text/css" rel="stylesheet" href=$meta.path + "res/common.css")
        block head_entry

    body
        block body_entry
        block body_end
        script(type="text/javascript" src=$meta.path + 'res/common.js')
